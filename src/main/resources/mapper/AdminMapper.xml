<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="dao.AdminMapper">
    <resultMap id="BaseResultMap" type="Admin">
        <id column="id" property="ID" jdbcType="INTEGER"/>
        <result column="account" property="account" jdbcType="VARCHAR"/>
        <result column="password" property="password"
                jdbcType="VARCHAR"/>
        <result column="power" property="power" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
		id, account, password, power
	</sql>

    <insert id="addAdmin" parameterType="Admin">
		insert into admin (account,password, power)
		values
		(#{account,jdbcType=VARCHAR},
		#{password,jdbcType=VARCHAR},
		#{power,jdbcType=VARCHAR})
	</insert>

    <select id="selectByAccount" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from admin
        where
        account = #{account,jdbcType=VARCHAR}
    </select>
    <select id="search" resultMap="BaseResultMap">
		select
		*
		from admin
		where
		account like
		#{keyword,jdbcType=VARCHAR} or id like #{keyword,jdbcType=VARCHAR}
		or
		power like #{keyword,jdbcType=VARCHAR}
	</select>
    <select id="allAdmin" resultMap="BaseResultMap">
		select
		*
		from admin
	</select>
    <select id="selectByID" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from admin
        where
        id = #{ID,jdbcType=VARCHAR}
    </select>

    <select id="isExistAccount" resultType="integer"
            parameterType="java.lang.String">
		select
		count(*)
		from admin
		where account =
		#{account,jdbcType=VARCHAR}
	</select>
    <delete id="deleteByID" parameterType="integer">
		delete from admin
		where id
		= #{id,jdbcType=INTEGER}
	</delete>
    <update id="updataAdmin" parameterType="Admin">
		update admin set
		account=#{account,jdbcType=VARCHAR},password=#{password,jdbcType=VARCHAR},power=#{power,jdbcType=VARCHAR}
		where id=#{ID,jdbcType=INTEGER}
	</update>
</mapper>